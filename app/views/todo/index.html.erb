<h1>Todo List</h1>
<h2>Outstanding Items</h2>
<% @todos.each do |t| %>
	<p>
	<strong><%= t.name %></strong>
	<small> <%= link_to "Mark as done", complete_todo_path(t), :method => :put %></small>
	<small> <%= link_to "Show Detail", todo_path(t), :method => :get %></small>
	<small> <%= link_to "Edit", edit_todo_path(t), :method => :get %></small>
	</p>
<% end %>
<h2>Completed Items</h2>
<% @completes.each do |t| %>
	<p>
	<strong><%= t.name %></strong>
	<small> <%= link_to "Remove", t, :confirm => "OK to remove?", :method => :delete%></small>
	</p>
<% end %>
<p><%= link_to "Add an item to the list?", new_todo_path %></p>

